<Page x:Class="RTDLayouts.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:views="using:RTDLayouts.Views"
      FontFamily="{StaticResource MvideoFontRegular}">
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="52"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Row="0" Grid.Column="1" Background="IndianRed"/>
            <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Background="#F5F5F5"/>
            <views:OrderingView Grid.Row="1" Grid.Column="1"/>
            <!--<views:ApproveOrderingView Grid.Row="1" Grid.Column="1"/>-->
        </Grid>
    </Grid>
</Page>
